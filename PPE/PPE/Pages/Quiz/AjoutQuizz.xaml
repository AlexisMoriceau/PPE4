<UserControl x:Class="PPE.Pages.Quiz.AjoutQuizz"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="758" d:DesignWidth="1004">
    <Grid Style="{StaticResource ContentRoot}">
        <Label x:Name="label_Quizz" Content="Renseigner les différents champs puis validez votre Quizz" Margin="0,0,644,693.4"/>
        <TextBox x:Name="textBox_Nom" Text="Saisissez un nom pour votre Quizz" Margin="93,46,684,644.4" GotFocus="textBox_Nom_GotFocus"/>
        <Label x:Name="label_Theme" Content="Choix du thème :" Margin="560,46,315,644.4"/>
        <ComboBox x:Name="comboBox_Theme" Margin="686,46,68,644.4"/>
        <Label x:Name="label_SousTheme" Content="Choix du sous-thème :" Margin="529,93,315,597.4"/>
        <ComboBox x:Name="comboBox_SousTheme" Margin="686,93,68,597.4"/>
        <Label x:Name="label_Question" Content="Choisissez une question dans la liste ci-dessous ou bien ajoutez-en une :" Margin="49,155,520,535.4"/>
        <Button x:Name="button_Question" Content="Ajouter" Margin="457,155,407,535.4" Click="button_Question_Click"/>
        <ListView x:Name="listView_Question" BorderBrush="Black" BorderThickness="1" Margin="49,197,407,385.4">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Intitulé de la question"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Label x:Name="label_Reponse" Content="Choisissez les différentes réponses possible pour votre question. Il est aussi possible d'ajouter des réponses :" Margin="49,373,331,317.4"/>
        <Button x:Name="button_Reponse" Content="Ajouter" Margin="641,369,223,321.4" Click="button_Reponse_Click"/>
        <ListView x:Name="listView_Reponse" BorderBrush="Black" BorderThickness="1" Margin="49,416,407,103.4">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Intitulé de la réponse"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>
